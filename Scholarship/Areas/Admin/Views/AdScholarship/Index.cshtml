@model List<tblScholarship>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutcshtml.cshtml";
}
<!-- Content Header (Page header) -->

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Scholarship Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href=@Url.Action("Index","AdminDashbord")>Home</a></li>
                    <li class="breadcrumb-item active">Scholarship Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header pull-right">
                        <a class="btn btn-primary float-right" href=@Url.Action("Add","AdScholarship")><i class="fas fa-plus"></i> Add Scholarship</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    @*<th>Id</th>*@
                                    <th>Name</th>
                                    <th>Amount</th>
                                    <th>Exam Date</th>
                                    <th>IsActive</th>

                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        @*<td>@item.Id</td>*@
                                        <td>
                                          @item.Name
                                        </td>
                                        <td>@item.Amount</td>
                                        <td>@item.ExamDate</td>
                                        <td> @item.IsActive</td>
                                        <td>
                                            <a href="@Url.Action("Edit","AdScholarship",new {id=item.Id })"  class="btn btn-block btn-warning">Edit</a>
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Delete","AdScholarship",new {id=item.Id })" class="btn btn-block btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                            
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>

</section>
<!-- /.content -->