@model List<tblStudentDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayoutcshtml.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Students Details</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href=@Url.Action("Index","AdminDashbord")>Home</a></li>
                    <li class="breadcrumb-item active">Students Details</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    @*<th>Id</th>*@
                                    <th>Name</th>
                                    <th>ParentName</th>
                                    <th>Sur Name</th>
                                    <th>ContactNumber</th>
                                    <th>EmailId</th>
                                    <th>Standard</th>
                                    <th>Stream</th>
                                    <th>Medium</th>
                                    <th>IsApply</th>
                                    <th>Registration Date</th>
                                    <th>City</th>
                                    <th>State</th>
                                    <th>Details</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    @*<td>@item.Id</td>*@
                                    <td>
                                        @item.Name
                                    </td>
                                    <td>@item.ParentName</td>
                                    <td>@item.SurName</td>
                                    <td> @item.ContactNumber</td>
                                    <td>
                                        @item.EmailId
                                    </td>
                                    <td>
                                        @item.STD
                                    </td>
                                    <td>
                                        @item.Stream
                                    </td>
                                    <td>
                                        @item.Medium
                                    </td>
                                    <td>
                                        @item.Apply_Scholarship
                                    </td>
                                    <td>
                                        @item.City
                                    </td>
                                    <td>
                                        @item.State
                                    </td>

                                    <td>
                                        @item.RegiDate
                                    </td>

                                    <td>
                                        <a href="@Url.Action("Detail","AdStudentDetails",new {id=item.Id })" class="btn btn-block btn-info">Detail</a>
                                    </td>
                                    <td>
                                        <a href="#" onclick="functionDelete(@item.Id)" class="btn btn-block btn-warning">Delete</a>
                                    </td>
                                </tr>
                                }


                            </tbody>

                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>

</section>
<script>
    function functionDelete(id) {
        if (confirm("Do you want to Delete?") == true) {
            $.ajax({
                type: "POST",
                url: '@Url.Action("Delete", "AdStudentDetails")',
                data: JSON.stringify({ 'stid': id }),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    if (response == "Ok") {
                        alert("Record deleted..!!");
                        window.location.reload();

                    }
                    else {
                        alert("Error..!!");
                    }
                }
            });
        }
    }
</script>