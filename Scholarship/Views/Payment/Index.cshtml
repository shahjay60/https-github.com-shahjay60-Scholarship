@model Scholarship.Models.PaymentClass

@{
    ViewBag.Title = "Index";
}

<div class="site-section ftco-subscribe-1 site-blocks-cover pb-4" style="background-image: url('images/bg_1.jpg')">
    <div class="container">
        <div class="row align-items-end">
            <div class="col-lg-7">
            </div>
        </div>
    </div>
</div>
<div class="custom-breadcrumns border-bottom">
    <div class="container">
        <a href="index.html">Home</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <a href="@Url.Action("Index","Scholarship")">Scholarship List</a>
        <span class="mx-3 icon-keyboard_arrow_right"></span>
        <span class="current">Scholarship</span>
    </div>
</div>
<div class="site-section">
    <div class="container">
        <div >
            @using (Html.BeginForm("Index", "Payment", FormMethod.Post))
            {
                <table class="table table-striped table-bordered table-hover" width="90%">
                   
                    <tr style="display:none">
                        <td>ScholarshipId</td>
                        <td>@Html.TextBoxFor(m => m.ScholarshipId, new { @class = "form-control", @readonly = "readonly" })</td>
                    </tr>
                    <tr>
                        <td>Id</td>
                        <td>@Html.TextBoxFor(m => m.StdId, new { @class = "form-control", @readonly = "readonly" })</td>
                    </tr>
                    <tr>
                        <td>Name :</td>
                        <td>@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })</td>
                    </tr>
                    <tr>
                        <td>Email :</td>
                        <td>@Html.TextBoxFor(m => m.Email, new { @class = "form-control", @readonly = "readonly" })</td>

                    </tr>
                    <tr>
                        <td>Contact Number :</td>
                        <td>@Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control", @readonly = "readonly" })</td>

                    </tr>
                    <tr>
                        <td>Scholarship Name :</td>
                        <td>@Html.TextBoxFor(m => m.ScholarshipName, new { @class = "form-control", @readonly = "readonly" })</td>


                    </tr>
                    <tr>
                        <td>Scholarship Details :</td>
                        <td>@Html.TextAreaFor(m => m.ScholarshipDetail, new { @class = "form-control", @readonly = "readonly" })</td>


                    </tr>
                    <tr>
                        <td>Scholarship Fees :</td>
                        <td>@Html.TextBoxFor(Model => Model.ScholarshipAmount, 
                           new { @class = "form-control", @readonly = "readonly" })
                        <span style="color:red;">(Including all taxes)</span></td>
                    </tr>
                   
                </table>
                <div style="text-align:center;">
                    <button type="submit" class="btn btn-Success" style="background-color:green;color:white;">Submit</button>
                </div>
            }
        </div>
    </div>
</div>

